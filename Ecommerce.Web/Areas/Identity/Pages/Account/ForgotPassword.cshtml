@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="d-flex justify-content-center align-items-center vh-100">
    <!-- Changed to match Login background color -->
    <div class="container">
        <div class="row justify-content-center align-items-stretch">
            <div class="col-md-5">
                <div class="card shadow-sm p-4" style="border-radius: 1rem;">
                    <h3 class="text-primary mb-4">Reset Your Password</h3>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        body {
            background: linear-gradient(to right, #eef2f3, #8EC5FC); /* Consistent background color */
        }

        .card {
            border-radius: 1rem; /* Consistent border radius */
        }

        .text-primary {
            color: #1a1a1a; /* Primary text color */
        }

        .btn-warning {
            background-color: #ff6600; /* Button color */
            border-color: #ff6600;
            color: #fff;
        }

        img {
            max-width: 100%;
            height: 100%;
            object-fit: cover;
            margin-left: 0;
            padding: 0;
        }

        .rounded-end {
            border-top-right-radius: 1rem;
            border-bottom-right-radius: 1rem;
        }
    </style>
}
