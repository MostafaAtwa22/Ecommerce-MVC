@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-sm p-4 d-flex flex-row align-items-stretch">
                    <!-- Form Section -->
                    <div class="col-md-6 p-4">
                        <h3 class="text-primary mb-4">Sign In with Ecommerce Account</h3>
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <form id="account" method="post" class="p-4 rounded bg-white">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email"><i class="bi bi-envelope"></i> Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                                <label asp-for="Input.Password"><i class="bi bi-lock"></i> Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3">Login</button>
                            <div class="text-center">
                                <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Create One</a></p>
                            </div>
                            <div class="text-center">
                                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Resend email confirmation</a></p>
                            </div>
                        </form>
                    </div>

                    <!-- Image Section -->
                    <div class="col-md-6">
                        <img src="~/img/ecommerce.jpg" class="img-fluid h-100 w-100 rounded-end" alt="Welcome Image">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: linear-gradient(to right, #eef2f3, #8EC5FC); /* Background color to match login */
    }

    .text-primary {
        color: #1a1a1a; /* Primary text color */
    }

    .card {
        border-radius: 1rem; /* Apply rounded corners to the whole container */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        overflow: hidden; /* Ensures the image and form stay within the rounded corners */
    }

    img {
        object-fit: cover;
        height: 100%;
        width: 100%;
    }

    .rounded-end {
        border-top-right-radius: 1rem;
        border-bottom-right-radius: 1rem;
    }
</style>
