@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-center mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Username" disabled />
                        <label><i class="bi bi-person me-2"></i>Username</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" placeholder="Enter your name" />
                        <label asp-for="Input.Name"><i class="bi bi-person-circle me-2"></i>Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Address" class="form-control" placeholder="Enter your address" />
                        <label asp-for="Input.Address"><i class="bi bi-house me-2"></i>Address</label>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.City" class="form-control" placeholder="Enter your city" />
                        <label asp-for="Input.City"><i class="bi bi-geo-alt me-2"></i>City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                        <label asp-for="Input.PhoneNumber"><i class="bi bi-telephone me-2"></i>Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Save</button>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <label class="form-label fw-bold mb-3">Profile Picture</label>
                    <div class="mb-3">
                        @if (Model.Input.ProfilePicture != null)
                        {
                            <img id="profilePicture" class="img-fluid rounded-circle shadow-sm"
                                 src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))"
                                 alt="Profile Picture" width="150" height="150" />
                        }
                        else
                        {
                            <img id="profilePicture" class="img-fluid rounded-circle shadow-sm"
                                 src="~/male7.jpeg" alt="Default Profile" width="150" height="150" />
                        }
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="custom-file">
                            <input type="file" accept="image/*" asp-for="Input.ProfilePicture"
                                   class="form-control"
                                   onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                            <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

    <style>
        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 10px;
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 5px rgba(128, 189, 255, 0.5);
            }

        .form-floating label {
            color: #6c757d;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            border-radius: 5px;
            padding: 10px;
            font-size: 1rem;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .custom-file-input {
            cursor: pointer;
        }

        .custom-file-label {
            display: none;
        }

        .img-fluid {
            border: 3px solid #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}