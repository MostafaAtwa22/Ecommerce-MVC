@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
    ViewData["CardTitle"] = "All Data";
}

<div class="container mt-4">
    <div class="row align-items-center">
        <div class="col-auto">
            <a class="btn btn-secondary btn-lg" asp-action="Create">
                <i class="bi bi-plus-circle-dotted"></i>
                Add Category
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-5 text-center">
            <h4 class="alert-heading">No Categories!</h4>
            <p>No categories have been added yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Created Time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CreatedTime</td>
                            <td>
                                <div class="d-flex justify-content-around">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm w-md-auto">
                                        <i class="bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm w-md-auto">
                                        <i class="bi-pencil"></i> Edit
                                    </a>
                                    <a href="javascript:;" class="btn btn-danger btn-sm w-md-auto js-delete" data-id="@item.Id">
                                        <i class="bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/category/category-index.js" asp-append-version="true"></script>
}
