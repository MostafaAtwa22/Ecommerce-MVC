@model Category

@{
    ViewData["Title"] = Model.Name;
    ViewData["CardTitle"] = "Category Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5>@ViewData["CardTitle"]</h5>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h6 class="font-weight-bold">Name</h6>
                <p class="lead">@Model.Name</p>
            </div>

            <div class="mb-4">
                <h6 class="font-weight-bold">Created Time</h6>
                <p>@Model.CreatedTime.ToString("MMMM dd, yyyy hh:mm tt")</p>
            </div>

            <div class="mb-4">
                <h6 class="font-weight-bold">Description</h6>
                <p>@Model.Description</p>
            </div>

            <div class="d-flex justify-content-start mt-4">
                <a href="@Url.Action("Index", "Categories")" class="btn btn-secondary mr-2">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
                <a href="@Url.Action("Edit", "Categories", new { id = Model.Id })" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>
