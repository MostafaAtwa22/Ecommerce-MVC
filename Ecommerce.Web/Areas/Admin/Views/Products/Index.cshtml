@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
    ViewData["CardTitle"] = "All Products";
}

<div class="container mt-4">
    <div class="row align-items-center">
        <div class="col-auto">
            <a class="btn btn-secondary btn-lg" asp-action="Create">
                <i class="bi bi-plus-circle-dotted"></i>
                Add Product
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-5 text-center">
            <h4 class="alert-heading">No Products!</h4>
            <p>No Products have been added yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table id="productTable" class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/products/product-table.js" asp-append-version="true"></script>
    <script src="~/js/products/product-index.js" asp-append-version="true"></script>
}