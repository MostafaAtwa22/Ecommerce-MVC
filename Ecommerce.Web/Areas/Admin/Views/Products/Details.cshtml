@model Product

@{
    ViewData["Title"] = Model.Name;
    ViewData["CardTitle"] = "Details";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 overflow-hidden">
        <div class="row g-0">
            <!-- Left: Product Image -->
            <div class="col-md-5 position-relative">
                <img src="@($"{FileSettings.ImagesPath}/Products/{Model.Image}")"
                     class="img-fluid h-100 object-fit-cover"
                     style="min-height: 400px;"
                     alt="@Model.Name">
                <div class="position-absolute top-0 end-0 m-3">
                    <span class="badge bg-success bg-opacity-90 text-dark fs-6 py-2 px-3">
                        In Stock: @Model.Amount
                    </span>
                </div>
            </div>

            <!-- Right: Product Details -->
            <div class="col-md-7 bg-light">
                <div class="card-body p-4 p-xl-5">
                    <div class="d-flex flex-column h-100">
                        <!-- Header Section -->
                        <div class="mb-4">
                            <h2 class="fw-bold display-6 mb-3">@Model.Name</h2>
                            <p class="lead text-muted mb-4">@Model.Description</p>
                            <h2 class="badge bg-primary bg-opacity-10 text-primary mb-4" style="font-size:20px">
                                @Model.Category.Name
                            </h2>
                            <h3 class="text-primary mb-4">$@Model.Price</h3>
                            @if(Model.Amount > 0)
                            {
                                <h3 class="text-success mb-1">@Model.Amount Product Available</h3>
                            }
                            else
                            {
                                <h3 class="text-danger mb-1">@Model.Amount Product Available</h3>
                            }
                        </div>

                        <!-- Specifications -->
                        <div class="mb-4">
                            <h5 class="fw-bold mb-3 text-uppercase text-secondary">Product Details</h5>
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="bg-white p-3 rounded-2 shadow-sm">
                                        <p class="mb-1 text-muted">SKU</p>
                                        <p class="mb-0 fw-bold">PROD-@Model.Id.ToString("D4")</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-white p-3 rounded-2 shadow-sm">
                                        <p class="mb-1 text-muted">Availability</p>
                                        @if (Model.Amount > 0)
                                        {
                                            <p class="mb-0 fw-bold text-success">+ In Stock</p>
                                        }
                                        else
                                        {
                                            <p class="mb-0 fw-bold text-danger">- Out Of Stock</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-auto d-flex gap-2">
                            <a href="@Url.Action("Index", "Products")"
                               class="btn btn-lg btn-outline-secondary px-4 py-2 flex-grow-1">
                                <i class="bi bi-arrow-left me-2"></i>  Back
                            </a>
                            <a href="@Url.Action("Edit", "Products", new { id = Model.Id })"
                               class="btn btn-lg btn-warning px-4 py-2 flex-grow-1">
                                <i class="bi bi-pencil-square me-2"></i>  Edit Product
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>